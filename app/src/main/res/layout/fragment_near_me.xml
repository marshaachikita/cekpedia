<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NearMeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#61B1BE"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

            <TextView
                android:id="@+id/toolbar_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cekpedia"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"/>

        </android.support.v7.widget.Toolbar>

        <EditText
            android:id="@+id/cari"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@id/my_toolbar"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:backgroundTint="#EEEBEB"
            android:hint="Cari"
            android:background="@drawable/search_layout"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/id_nearme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Near Me"
            android:layout_below="@id/cari"
            android:gravity="center"
            android:textSize="20sp"/>

        <ListView
            android:id="@+id/lv_nearme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/id_nearme">

        </ListView>

    </RelativeLayout>

</FrameLayout>